        </div>
        <div class="carousel-wrap layout_padding2 ">
            <div class="owl-carousel owl-one">
                 @foreach (var value in Model) {
                <div class="item">
                    <div class="content">
                        
                        <div class="top-content">
                            <div class="img-box">
                                    <img src="~/@Url.Content(value.CompanyVehicleImage)" height="200" />
                            </div>
                            <div class="img-text">
                                <h6 class="price">
                                    <span>PKR</span>
                                    @value.CompanyVehiclePrice
                                </h6>
                               
