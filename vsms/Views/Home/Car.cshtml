 <!-- car section -->
<section class="car_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Our Cars
            </h2>
            <hr>
        </div>
        <div class="layout_padding">
            <div class="row">
                @model IEnumerable<vsms.Models.NewVehicle>
                @foreach(var value in Model){
                    <form asp-controller="home" asp-action="AddCart" method="post">

                        <div class="col-md-6 ">
                        <div class="card" style="width: 18rem;">
                            <img src="~/@Url.Content(value.CompanyVehicleImage)" height="250" alt="">
                            <div class="card-body">
                                <input type="hidden" id="txtVNo" name="txtVNo" value="@value.VehicleId.ToString()" />
                                <h4 class="card-title"> @value.CompanyVehicleName </h4>
                                <h4>
                                        <span style="color:green">
                                        PKR
                                    </span>
                                    @value.CompanyVehiclePrice
                                </h4>
                                <input class="btn btn-primary" type="submit" value="Book Now" />
                            </div>
                        </div>
                        </div>
          
                </form>
               }
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <a href="" class="see_more-btn">
                See More
            </a>
        </div>
    </div>
</section>

<!-- end car section -->
