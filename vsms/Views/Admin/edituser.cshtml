@model vsms.Models.User
@{
    Layout = "_Layout1";

}
<style>
    .subscribe_section {
        padding: 50px 0;
        background-color: #f5f5f5;
    }

    .container-fuild {
        width: 100%;
        margin-right: auto;
        margin-left: auto;
        padding-right: 15px;
        padding-left: 15px;
    }

    .box {
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .contact_form-container {
        text-align: center;
    }

        .contact_form-container input[type="text"],
        .contact_form-container input[type="email"],
        .contact_form-container input[type="tel"],
        .contact_form-container input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .contact_form-container input[type="file"] {
            width: 100%;
            margin-top: 10px;
        }

        .contact_form-container button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .contact_form-container button:hover {
                background-color: #0056b3;
            }
</style>

<section class="subscribe_section">
    <div class="container-fuild">
        <div class="box">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <form asp-action="edituser2" enctype="multipart/form-data">
                        <div class="contact_form-container">

                            <center> <h1> Edit User </h1> </center>
                            <div>
                                <input type="hidden"  asp-for="UserId" />
                                <div>
                                    <input type="text" placeholder="UserName" asp-for="UserName">
                                </div>
                                <div>
                                    <input type="email" placeholder="Email" asp-for="UserEmail">
                                </div>
                                <div>
                                    <input type="tel" placeholder="PhoneNumber" asp-for="UserPhoneNumber">
                                </div>
                                <div>
                                    <input type="text" placeholder="City" asp-for="UserCity">
                                </div>
                                <div>
                                    <input type="password" placeholder="Password" asp-for="UserPassword">
                                </div>

                                <div>
                                    <input type="hidden" asp-for="Roles" value="2">
                                </div>


                                <input type="file" name="file">


                                <button type="submit">
                                    Edit
                                </button>
                            </div>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>